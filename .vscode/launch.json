{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Launch Debug",
            "preLaunchTask": "${defaultBuildTask}",
            "speed": 4000,
            "cwd": "${workspaceFolder}",
            "connectUnderReset": true,
            "chip": "STM32L451CEUx",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "programBinary": "./target/thumbv7em-none-eabi/debug/${workspaceFolderBasename}"
                }
            ]
        },
        {
            "type": "probe-rs-debug",
            "request": "attach",
            "name": "Attach Release",
            "speed": 4000,
            "cwd": "${workspaceFolder}",
            "chip": "STM32L451CEUx",
            "coreConfigs": [
                {
                    "programBinary": "./target/thumbv7em-none-eabi/release/${workspaceFolderBasename}",
                    "svdFile": "${workspaceFolder}/STM32L452.svd"
                }
            ]
        }
    ]
}